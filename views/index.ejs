<html>
<body>
    <div class="content">
        <ul>
            <% messages.forEach(function(message){ %>
            <li><%= message.content %> - <%= (new Date(message.createdAt)).toLocaleTimeString() %></li>
            <% }) %>
        </ul>

        <form action="/messages" method="POST">
            <label for="message">Your message:</label>
            <input type="text" name="message" id="message" />
            <button>Submit</button>
        </form>
    </div>
</body>
<style>
body {
    font-family: 'Helvetica';
    font-size: 16px;
}

.content {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding: 1rem;
}

.content ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.content li {
    padding: 1rem;
    margin-bottom: 0.75rem;
    background-color: #F5F6F7;
}

.content form {
    margin-top: 1rem;
}

.content form input {
    padding: 0.5rem;
}
</style>
</html>